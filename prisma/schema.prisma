// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id             Int          @id @default(autoincrement())
  name           String
  mobile         String
  address        String
  email          String       @unique
  password       String
  trips          Trip[]  
  subscriptions  Subscription[] 
  roles          Role[]
}

model Trip {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Int
  Date        DateTime
  customers   Customer[]
}

model Subscription {
  id          Int        @id @default(autoincrement())
  name        String
  price       Int
  description String
  customers   Customer?  @relation(fields: [customersId], references: [id])
  customersId Int? 
  
}

model Role {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  customers   Customer[]
}

